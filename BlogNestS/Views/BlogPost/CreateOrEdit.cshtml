@model BlogPost


<form method="post" asp-action="CreateOrEdit" asp-controller="BlogPost" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="Heading" class="form-label">Heading</label>
            <input asp-for="Heading" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="PageTitle" class="form-label">Page Title</label>
            <input asp-for="PageTitle" class="form-control" />
        </div>
 

    <div class="col-md-6">
        <label asp-for="PageTitle" class="form-label">Page Title</label>
        <input asp-for="PageTitle" class="form-control" />
    </div>


        <div class="col-md-6">
            <label  class="form-label">Images</label>
            <input type="file" class="form-control" id="featuredImageUpload" />
        </div>

        <div class="col-md-6">
            <label asp-for="FeaturedImageUrl" class="form-label">Featured Image URL</label>
            <input asp-for="FeaturedImageUrl" class="form-control" id="featuredImageUrl" />
        </div>
    

        <div class="col-md-6">
            <label asp-for="UrlHandle" class="form-label">URL Handle</label>
            <input asp-for="UrlHandle" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="PublishedDate" class="form-label">Published Date</label>
            <input asp-for="PublishedDate" type="datetime-local" class="form-control" />
        </div>
    
   
        <div class="col-md-6">
            <label asp-for="Author" class="form-label">Author</label>
            <input asp-for="Author" class="form-control" />
        </div>

        <div class="form-check  col-md-6 mt-4 align-items-center">
                <input asp-for="Visible" class="form-check-input" type="checkbox" />
                <label asp-for="Visible" class="form-check-label">Visible</label>
            </div>

        <div class="col-md-6">
            <label asp-for="Content" class="form-label">Short Content</label>
            <textarea asp-for="Content" class="form-control" rows="2"></textarea>
        </div>

            <div class="col-md-12">
                <label asp-for="ShortDescription" class="form-label">Short Description</label>
                <textarea asp-for="ShortDescription" class="form-control" rows="2"></textarea>
            </div>
      
    <div class="d-flex justify-content mt-4">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

    </div>
</form>




@section Scripts {
    <script>
        // let editor = new FroalaEditor("#content");
         let featureUploadElement = document.getElementById("featuredImageUpload");
         let FeaturedImageUrlElement = document.getElementById("featuredImageUrl");

          async function featureImageUpload(e){
             console.log(e.target.files[0])
             let data = new FormData();
             data.append("file",e.target.files[0])
             fetch("/api/images",{
                 method:"POST",
                 headers:{
                     "Aceept":"*/*"
                 },
                 body:data
             }).then(res=>res.json())
             .then(result=>{
                 console.log(result)
                 FeaturedImageUrlElement.value=result.link.result
             })
         }

         featureUploadElement.addEventListener('change', featureImageUpload)

    </script>
}

